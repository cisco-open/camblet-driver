override_dh_auto_install:
	dh_auto_install
	mkdir -p debian/nasp-kernel-module/usr/src/nasp-1.0.0/
	cp -r *.c *h Makefile static/ third-party debian/nasp-kernel-module/usr/src/nasp-1.0.0/

